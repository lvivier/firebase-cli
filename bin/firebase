#!/usr/bin/env node

/**
 * Dependencies
 */

var app = require('commander')
  , version = require('../package.json').version
  , commands = require('../lib/commands')
  , config = require('../lib/config')

app
  .version(version)
  .usage('<command> [<args>]')
  .option('-c, --config <file>', 'specify configuration file', config.resolve)

app
  .command('ls')
  .description('list namespaces')
  .action(commands.ls)

app
  .command('create [namespace]')
  .description('create [namespace]')
  .action(commands.create)

app
  .command('rm [namespace]')
  .description('remove [namespace]')
  .action(commands.rm)

app
  .command('forge [namespace]')
  .description('open [namespace] in Forge')
  .action(commands.forge)

app
  .command('set [key] [value]')
  .description('set configuration options')
  .action(commands.configure)

app.parse(process.argv)

